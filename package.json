{
  "private": true,
  "scripts": {
    "build": "php hyde build --no-ansi",
    "watch": "concurrently  \"npm:watch-livereload\" \"npm:watch-build\" \"npm:watch-tailwind\"",
    "watch-build": "chokidar ./_posts/*.md ./_docs/*.md ./resources/views/**/*.blade.php -c \"npm run build\"",
    "watch-livereload": "npx browser-sync _site -w",
    "watch-tailwind": "npx tailwindcss -i ./resources/frontend/app.css -o ./_site/media/app.css --watch",
    "prod": "npx tailwindcss -i ./resources/frontend/app.css -o ./_site/media/app.css --minify",
    "dev": " npx tailwindcss -i ./resources/frontend/app.css -o ./_site/media/app.css"
  },
  "devDependencies": {
    "tailwindcss": "^3.0.23",
    "@tailwindcss/typography": "^0.5.2",
    "browser-sync": "^2.27.9",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.0.0",
    "prettier": "2.6.0"
  }
}
